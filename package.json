{
  "name": "async-call-rpc",
  "version": "2.0.2",
  "description": "A lightweight JSON RPC server & client",
  "main": "out/full.js",
  "module": "out/full.mjs",
  "types": "./out/full.d.ts",
  "exports": {
    ".": {
      "require": "./out/full.js",
      "import": "./out/full.mjs"
    },
    "./base": {
      "require": "./out/base.js",
      "import": "./out/base.mjs"
    }
  },
  "scripts": {
    "release": "rimraf ./out && standard-version",
    "start": "node ./watch.js",
    "build": "tsc --declaration --outDir ./es/",
    "prepublishOnly": "npm run build && npm run roll && npm run doc",
    "doc:api": "api-extractor run --local --verbose",
    "doc:md": "api-documenter markdown -o docs -i temp",
    "doc": "npm run doc:api && npm run doc:md",
    "doc:preview": "docsify serve .",
    "roll": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jack-Works/async-call.git"
  },
  "keywords": [
    "jsonrpc"
  ],
  "author": "Jack Works <zjwpeter@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jack-Works/async-call/issues"
  },
  "homepage": "https://github.com/Jack-Works/async-call#readme",
  "devDependencies": {
    "@microsoft/api-documenter": "latest",
    "@microsoft/api-extractor": "latest",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/jest": "^26.0.0",
    "docsify-cli": "^4.4.1",
    "jest": "^26.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.13.1",
    "rollup-plugin-dts": "^1.4.7",
    "rollup-plugin-terser": "^6.1.0",
    "standard-version": "^8.0.0",
    "ts-jest": "^26.1.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  },
  "files": [
    "src",
    "out",
    "tsconfig.json"
  ]
}
